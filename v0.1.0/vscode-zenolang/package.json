{
  "name": "zenolang",
  "displayName": "ZenoLang Support",
  "description": "Language support for ZenoLang (.zl)",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "zenolang",
        "aliases": [
          "ZenoLang",
          "zenolang"
        ],
        "extensions": [
          ".zl"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "zenolang-blade",
        "aliases": [
          "ZenoBlade",
          "zenoblade"
        ],
        "extensions": [
          ".blade.zl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "zenolang",
        "path": "./snippets/zenolang.code-snippets"
      }
    ],
    "grammars": [
      {
        "language": "zenolang",
        "scopeName": "source.zenolang",
        "path": "./syntaxes/zenolang.tmLanguage.json"
      },
      {
        "language": "zenolang-blade",
        "scopeName": "source.zenolang.blade",
        "path": "./syntaxes/blade.tmLanguage.json",
        "embeddedLanguages": {
          "source.zenolang": "zenolang"
        }
      }
    ]
  }
}