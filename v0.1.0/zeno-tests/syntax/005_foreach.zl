// Test 005: Foreach Loops
// This test verifies that foreach loops work correctly

http.get: "/api/loops/foreach" {
    summary: "Test foreach loops"
    tags: ["Tests"]
    
    $items: [10, 20, 30]
    $total: 0
    
    foreach: $items {
        as: $item
        $total: "$total + $item"
    }
    
    http.ok {
        total: $total
        items: $items
    }
}
