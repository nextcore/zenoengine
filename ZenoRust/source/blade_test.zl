let items = ["Apple", "Banana", "Cherry"];
let tpl = "
<ul>
@foreach(items as item)
  <li>{{ item }}</li>
@endforeach
</ul>
";

let output = view(tpl, {"items": items});
print(output);

// Test @if inside loop
let tpl2 = "
@foreach(items as item)
  @if(item == \"Banana\")
    Found Banana!
  @else
    Not Banana: {{ item }}
  @endif
@endforeach
";

let output2 = view(tpl2, {"items": items});
print(output2);
