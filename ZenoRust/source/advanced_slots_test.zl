// Regex
let text = "Hello 123 World";
print("Regex Match 123: " + str(regex_match("\\d+", text)));
let replaced = regex_replace("\\d+", text, "Zeno");
print("Regex Replace: " + replaced);

// Encoding
let raw = "Hello Zeno";
let encoded = base64_encode(raw);
print("Base64 Encoded: " + encoded);
print("Base64 Decoded: " + base64_decode(encoded));

let hexed = hex_encode(raw);
print("Hex Encoded: " + hexed);
print("Hex Decoded: " + hex_decode(hexed));

