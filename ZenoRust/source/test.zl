print("--- ZenoLang Maps (Objects) Test ---");

let user = {"name": "Zeno", "role": "Engine", "ver": 1};
print("Object created: " + str(user));

let name = user["name"];
print("User Name: " + name);

print("Updating version...");
user["ver"] = 2; // Assignment to map key
print("New Version: " + str(user["ver"]));

print("Adding new key 'status'...");
user["status"] = "Active"; // Assignment to new key
print("User Status: " + user["status"]);

print("Object structure: " + str(user));

print("--- Assignment Test ---");
let x = 10;
print("x is " + str(x));
x = 20; // Re-assignment to variable
print("x is now " + str(x));

let nums = [1, 2, 3];
nums[1] = 99; // Assignment to array index
print("Array updated: " + str(nums));
