print("--- ZenoLang Control Flow Test ---");

let x = 10;
let y = 20;

print("Testing If/Else:");
if (x < y) {
    print("Correct: x is less than y");
} else {
    print("Incorrect: x should be less than y");
}

if (x > y) {
    print("Incorrect: x is not greater than y");
} else {
    print("Correct: x is NOT greater than y");
}

print("Testing Scoping:");
let z = 50;
if (true) {
    let z = 99;
    print("Inside block, z should be 99:");
    print(z);
}
print("Outside block, z should be 50:");
print(z);

print("Testing Boolean Logic:");
if (10 == 10) {
    print("10 equals 10");
}
if (10 != 20) {
    print("10 not equals 20");
}
