print("--- ZenoLang Arrays Test ---");

let numbers = [10, 20, 30];
print("Array created: " + str(numbers));

let first = numbers[0];
print("First element: " + str(first));

let last = numbers[2];
print("Last element: " + str(last));

print("Adding element 40...");
push(numbers, 40);
print("New array: " + str(numbers));

let size = len(numbers);
print("Array length: " + str(size));

print("Looping through array (simulated with recursion):");
fn printArray(arr, idx) {
    if (idx < len(arr)) {
        print("Element " + str(idx) + ": " + str(arr[idx]));
        printArray(arr, idx + 1);
    }
}
printArray(numbers, 0);
