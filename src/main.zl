// 404 Handler
http.get: /* {
  do: {
    // If accessing root, /max, or /max/, redirect to the tutorial dashboard
    if: $path == "/" {
        then: {
             http.redirect: "/tutorial/max"
             return
        }
    }

    if: $path == "/max" {
        then: {
             http.redirect: "/tutorial/max"
             return
        }
    }

    if: $path == "/max/" {
        then: {
             http.redirect: "/tutorial/max"
             return
        }
    }

    http.not_found: {
      body: "Halaman tidak ditemukan."
    }
  }
}
