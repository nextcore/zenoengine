
log: "--- Start Demo v3 ---"

$filename: "examples/metaprogramming/myscript.zl"
$code: "log: 'I am alive! Executed from dynamic code!'"

// 1. WRITE file
io.file.write {
    path: $filename
    content: $code
}
log: "File Write Completed"

// 2. READ file back (Using block syntax for safety)
io.file.read {
    path: $filename
    as: $read_back
}
log: "File Read Completed"

// 3. EXECUTE dynamically
log: "Executing Dynamic Code:"
meta.eval: $read_back

log: "--- Demo Success ---"
